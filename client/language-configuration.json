{
    "comments": {
        "lineComment": "//",
        "blockComment": [
            "/*",
            "*/"
        ]
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
        [
            "'",
            "'"
        ]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*(\\b(fn|struct|enum|if|for|while|match)\\b.*\\{[^}]*$)",
        "decreaseIndentPattern": "^\\s*\\}"
    },
    "onEnterRules": [
        {
            "beforeText": "^.*\\{[^}]*$",
            "action": {
                "indentAction": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\}",
            "action": {
                "indentAction": "outdent"
            }
        },
        {
            "beforeText": "^\\s*//.*$",
            "action": {
                "indentAction": "none"
            }
        }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#?region\\b",
            "end": "^\\s*//\\s*#?endregion\\b"
        }
    }
}